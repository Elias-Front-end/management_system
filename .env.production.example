# Django
DEBUG=False
SECRET_KEY=sua-chave-secreta-super-segura-aqui-minimo-50-caracteres
ALLOWED_HOSTS=seu-dominio.render.com,seu-app.railway.app

# Database (PostgreSQL) - Opção 1: URL completa (recomendado para PaaS)
DATABASE_URL=postgresql://usuario:senha@host:porta/nome_db

# Database (PostgreSQL) - Opção 2: Variáveis individuais (alternativa)
# DATABASE_ENGINE=postgresql
# DATABASE_NAME=management_system
# DATABASE_USER=postgres
# DATABASE_PASSWORD=sua_senha
# DATABASE_HOST=localhost
# DATABASE_PORT=5432

# CORS (Frontend)
CORS_ALLOWED_ORIGINS=https://seu-frontend.vercel.app,https://seu-frontend.netlify.app

# JWT
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# Render.com específico
PYTHON_VERSION=3.10.12

# Railway.app específico
PORT=8000